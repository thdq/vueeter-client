{
    "compilerOptions": {
        "target": "ES2018",
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "lib": [
            "ESNext",
            "ESNext.AsyncIterable",
            "DOM"
        ],
        "esModuleInterop": true,
        "allowJs": true,
        "sourceMap": true,
        "noEmit": true,
        "experimentalDecorators": true,
        "baseUrl": "src",
        "paths": {
            "@/*": [
                "./*"
            ],
            "^/*": [
                "./src/*"
            ]
        },
        "types": [
            "@nuxt/types",
            "@nuxtjs/axios",
            "@types/node",
            "@types/jest",
            "nuxt-i18n"
        ]
    },
    "exclude": [
        "node_modules",
        ".nuxt",
        "dist"
    ]
}
